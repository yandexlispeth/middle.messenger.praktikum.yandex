:root {
    --button-bg-color: #5162BC;
    --button-text-color: #FFF;
    --button-bg-hover: #7986c3;
}

button {
    width: 180px;
    height: 41px;
    background: var(--button-bg-color);
    border-radius: 10px;
    font-size: 14px;
    color: var(--button-text-color);
}

button:hover {
    background: var(--button-bg-hover);
}
